          OPERATORS
          _________
          
          
// Assignment Operators          
let x += 10;  // x = x + 10    
x *= 4;       // x = x * 40 
x++;          // x = x + 1
x--;          // x = x - 1
          

// Comparison Operators
let x = 10;
let y = 5;
x > y;    // true
x < y;    // false





